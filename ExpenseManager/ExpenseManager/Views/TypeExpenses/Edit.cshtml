@model ExpenseManager.Models.TypeExpense

@{
    ViewData["Title"] = "Edit";
}


    <div class="formulario">
        <h6>Update - TypeExpense @Model.Name</h6>
        <hr />
        <div class="row">
            <div class="col-md-4">
                <form asp-action="Edit" class="form border rounded">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <input type="hidden" asp-for="TypeExpenseId" />
                    <div class="form-group">
                        <label asp-for="Name" class="control-label"></label>
                        <input asp-for="Name" class="form-control" />
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>
                    <hr />
                    <div class="form-group">
                        <input type="submit" value="Save" class="btn btn-outline-success btn-sm" />
                        <a asp-action="Index" class="btn btn-outline-dark btn-sm">Return</a>
                    </div>
                </form>
            </div>
        </div>

    </div>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
